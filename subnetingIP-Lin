            if orang == 0:
                return(f"{Wh}PREFIX TIDAK BISA DI GUNAKAN, KARENA ITU PREFIX [/31] TOTAL IP [2] - [2] SISA 0 CLIENT!")
            elif orang < 3:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/30], KARENA TOATAL IP [4] - [2] SISA [2] CLIENT!")
            elif orang < 7:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/29], KARENA TOATAL IP [8] - [2] SISA [6] CLIENT!")
            elif orang < 15:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/28], KARENA TOATAL IP [16] - [2] SISA [14] CLIENT!")
            elif orang < 31:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/27], KARENA TOATAL IP [32] - [2] SISA [30] CLIENT!")
            elif orang < 63:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/26], KARENA TOATAL IP [64] - [2] SISA [62] CLIENT!")
            elif orang < 127:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/25], KARENA TOATAL IP [128] - [2] SISA [126] CLIENT!")
            elif orang < 255:
                return(f"{Wh}PREFIX YANG DI PAKAI ADALAH [/24], KARENA TOATAL IP [256] - [2] SISA [254] CLIENT!")
            else:
                return(f"{Wh}LOGIKA MU MANA, MANA ADA CLIENT {orang} DI PREFIX KELAS C !")
